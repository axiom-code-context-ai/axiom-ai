# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=axiom
DB_USER=axiom
DB_PASSWORD=change_this_strong_password
DATABASE_URL=postgresql://axiom:change_this_strong_password@postgres:5432/axiom

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password
REDIS_URL=redis://:change_this_redis_password@redis:6379

# Security Configuration
JWT_SECRET=change_this_to_32_character_secret_key_for_jwt_tokens
ENCRYPTION_KEY=change_this_to_32_byte_encryption_key_for_data
VAULT_KEY=change_this_to_32_byte_vault_encryption_key_here
NEXTAUTH_SECRET=change_this_nextauth_secret_for_auth_sessions
NEXTAUTH_URL=http://localhost:3000

# LLM Provider Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_DEPLOYMENT=gpt-4

# Git Authentication
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITLAB_TOKEN=glpat-your_gitlab_access_token_here
BITBUCKET_USERNAME=your_bitbucket_username
BITBUCKET_APP_PASSWORD=your_bitbucket_app_password

# Security Scanner APIs
NVD_API_KEY=your_nvd_api_key_for_cve_data
GITHUB_SECURITY_TOKEN=ghp_token_for_github_advisories

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info
MAX_FILE_SIZE=10485760
MAX_REPO_SIZE=1073741824

# Service Ports
WEB_PORTAL_PORT=3000
SEARCH_API_PORT=4000
CRAWLER_AGENT_PORT=4001
SECURITY_SCANNER_PORT=4002
EMBEDDING_GENERATOR_PORT=4003
MCP_SERVER_PORT=5000

# Queue Configuration
QUEUE_CONCURRENCY=5
MAX_JOB_RETRIES=3
JOB_TIMEOUT=300000

# Storage Configuration
REPO_STORAGE_PATH=/data/repos
CACHE_STORAGE_PATH=/data/cache
LOG_STORAGE_PATH=/data/logs

# Performance Configuration
SEARCH_CACHE_TTL=3600
EMBEDDING_BATCH_SIZE=100
MAX_SEARCH_RESULTS=100
VECTOR_SIMILARITY_THRESHOLD=0.7
