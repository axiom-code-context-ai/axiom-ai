{
  "name": "@axiom-ai/security-scanner",
  "version": "1.0.0",
  "description": "Security vulnerability scanner for Axiom AI",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && chmod +x dist/index.js",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.cache"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "fastify-plugin": "^4.5.1",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@prisma/client": "^5.7.1",
    "bull": "^4.12.2",
    "ioredis": "^5.3.2",
    "node-cron": "^3.0.3",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "axios": "^1.6.2",
    "semver": "^7.5.4",
    "yaml": "^2.3.4",
    "xml2js": "^0.6.2",
    "glob": "^10.3.10",
    "minimatch": "^9.0.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "bandit": "^1.0.0",
    "retire": "^4.2.4",
    "safety-cli": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/xml2js": "^0.4.14",
    "@types/semver": "^7.5.6",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "vitest": "^1.1.0",
    "prisma": "^5.7.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
