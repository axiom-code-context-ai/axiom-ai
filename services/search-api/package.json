{
  "name": "@axiom-ai/search-api",
  "version": "1.0.0",
  "description": "High-performance search API with vector and keyword search for Axiom AI",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && chmod +x dist/index.js",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.cache"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "fastify-plugin": "^4.5.1",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@prisma/client": "^5.7.1",
    "ioredis": "^5.3.2",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "openai": "^4.20.1",
    "cohere-ai": "^7.6.2",
    "tiktoken": "^1.0.10",
    "node-cron": "^3.0.3",
    "fuse.js": "^7.0.0",
    "natural": "^6.10.0",
    "compromise": "^14.10.0",
    "stopword": "^2.0.8",
    "similarity": "^1.2.1",
    "cosine-similarity": "^1.0.1",
    "ml-matrix": "^6.10.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "vitest": "^1.1.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "prisma": "^5.7.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
